#include<iostream>
using namespace std;

int main(){
int i,j,n,k;
    cin>>n;
    for(i=1;i<=n;i++)
    {
        k=2;
        for(j=1;j<=n-i;j++)
            cout<<" ";
        for(j=1;j<=i;j++)
            cout<<i-j+1;
        for(j=1;j<=i-1;j++){
          	cout<<k;
       	    k++;
        }
	cout<<endl;
    }
}

